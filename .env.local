# Frontend Environment Variables (Development)

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Frontend Configuration
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Calendly Clone
NEXT_PUBLIC_APP_VERSION=1.0.0

# OAuth Client IDs (for frontend-initiated OAuth flows)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id
NEXT_PUBLIC_ZOOM_CLIENT_ID=your-zoom-client-id

# Feature Flags
NEXT_PUBLIC_ENABLE_SSO=true
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WORKFLOWS=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_MOCK_API=false

# External Services (if frontend needs direct access)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Timezone and Localization
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting (for client-side enforcement)
NEXT_PUBLIC_API_RATE_LIMIT=1000
NEXT_PUBLIC_BOOKING_RATE_LIMIT=10