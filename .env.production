# Frontend Environment Variables (Production)

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.your-domain.com/api/v1
NEXT_PUBLIC_BACKEND_URL=https://api.your-domain.com

# Frontend Configuration
NEXT_PUBLIC_FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_APP_NAME=Calendly Clone
NEXT_PUBLIC_APP_VERSION=1.0.0

# OAuth Client IDs (Production)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-production-google-client-id
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your-production-microsoft-client-id
NEXT_PUBLIC_ZOOM_CLIENT_ID=your-production-zoom-client-id

# Feature Flags
NEXT_PUBLIC_ENABLE_SSO=true
NEXT_PUBLIC_ENABLE_MFA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WORKFLOWS=true

# Development Settings
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false

# External Services
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# Timezone and Localization
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_DEFAULT_LOCALE=en-US

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=1000
NEXT_PUBLIC_BOOKING_RATE_LIMIT=10